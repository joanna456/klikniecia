//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;

//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
        : TForm(Owner)
{
}
//---------------------------------------------------------------------------



void __fastcall TForm1::z1MouseDown(TObject *Sender, TMouseButton Button,
      TShiftState Shift, int X, int Y)
{
if(z1->Canvas->Pixels[X][Y] != clWhite)
        z1->Picture->LoadFromFile("images/p1a.bmp");
}
//---------------------------------------------------------------------------
void __fastcall TForm1::z1MouseUp(TObject *Sender, TMouseButton Button,
      TShiftState Shift, int X, int Y)
{
     z1->Picture->LoadFromFile("images/p1.bmp");
}
//---------------------------------------------------------------------------


